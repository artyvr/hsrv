[Unit]
Description=Gotify docker compose service
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/bash -c "docker compose -f /home/art/docker/docker-compose-gotify.yml up --detach"
ExecStop=/bin/bash -c "docker compose -f /home/art/docker/docker-compose-gotify.yml stop"

[Install]
WantedBy=multi-user.target
